<h2><%= @list.name %></h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %>  <%= bookmark.comment %></li>
    <%= link_to "Delete bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: "segurito?"} %>
  <% end %>
</ul>

<%= link_to "Back to lists", lists_path %>
<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
